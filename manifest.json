{
  "manifest_version": 3,
  "name": "Wordle Themes",
  "version": "1.0.0",
  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "description": "Use custom colors on Wordle!",
  "content_scripts": [
    {
      "css": ["wordle.css", "fonts.css"],
      "matches": [
        "https://www.powerlanguage.co.uk/wordle/",
        "https://www.nytimes.com/games/wordle*"
      ],
      "js": ["index.js"]
    }
  ]
}
